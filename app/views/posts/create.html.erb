<% if @post.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@post.errors.count, "error") %>
            no se permitió el registro:
        </h2>
        <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %> </li>
            <% end %>
        </ul>
    </div>
<% else %>
    <h1> Te registraste con éxito </h1>
    <%= link_to("Revisar listado de Posts", "/") %>
<% end %>


