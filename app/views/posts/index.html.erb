<h2>Ingrese su post</h2>

<form method = "get" action = "posts/create">
    <br>
    <div class="form-group">
        <label for "title">Titulo</label>
        <input id="title" name="title" class="form-control" placeholder="Ingrese el titulo">
    </div>
    <br>
    <div class="form-group">
        <label for "content">Contenido del post</label>
        <input name="content" class="form-control" placeholder="Escriba su post">
    </div>
    <br>
    <div class="form-group">
        <label for "image_url">Imagen</label>
        <input id="image_url" name="image_url" class="form-control" placeholder="Ingrese la url de su imagen">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
<br>

<table class="table">
    <tr>
      <th>Título</th>
      <th>Fecha de creación</th>
      <th>Contenido</th>
      <th>Imagen</th>
    </tr>
      
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.title%></td>
          <td><%= post.created_at%></td>
          <td><%= post.content%></td>
          <td><img src = <%= post.image_url%> width= "200" height= "200"></td>
        </tr>
    <% end %>
</table>
